<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >


    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/shakedetect"
        android:layout_width="97dp"
        android:layout_height="81dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="150dp"
        android:textColor="@color/colorPrimaryDark"
        android:textOff="OFF"
        android:textOn="ON"
        android:thumb="@drawable/thumb"
        app:showText="true"
        app:track="@drawable/track"
        />

    <TextView
        android:id="@+id/alpha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TextView"
        android:layout_centerVertical="true"
        android:layout_below="@id/shakedetect"/>

    <SeekBar
        android:id="@+id/shakesense"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@id/alpha"
        android:layout_marginLeft="50dp"
        android:layout_centerVertical="true"
        />


    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/Lockscreen"
        android:layout_width="97dp"
        android:layout_height="81dp"
        android:layout_below="@id/shakesense"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="207dp"
        android:textColor="@color/colorPrimaryDark"
        android:textOff="OFF"
        android:textOn="ON"
        android:thumb="@drawable/thumb"
        app:showText="true"

        app:track="@drawable/track" />

    <SeekBar
        android:id="@+id/lockangel"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/beta"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/beta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Lockscreen"
        android:gravity="center"
        android:text="TextView" />


</RelativeLayout>