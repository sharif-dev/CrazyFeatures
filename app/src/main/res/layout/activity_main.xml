<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#99003d">



  <Toolbar
      android:layout_width="match_parent"
      android:layout_height="80dp"
      android:background="#1f2c47"
      android:id="@+id/toolbar"
      tools:targetApi="lollipop"
      android:logo="@drawable/logo"
      android:title="Crazy Features"
      android:titleMarginTop="20dp"
      android:titleMarginStart="30dp"
      android:titleTextColor="#ffffff"
      android:padding="1dp"
      />

    <ScrollView
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/bg_gradient"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="761dp"
        android:layout_gravity="center"
        android:clipToPadding="false"

        android:orientation="vertical">

        ///////////////////////////    first /////////////

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@color/colorPrimaryDark">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="#eef2f7"
                android:orientation="vertical"
                >



                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/alarmclock"
                    android:layout_marginTop="10dp"/>


                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/alarm_clock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textOff="OFF"
                    android:textOn="ON"
                    android:thumb="@drawable/thumb"
                    app:showText="true"
                    app:track="@drawable/track" />

                <EditText
                    android:id="@+id/numberText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="7"
                    android:textSize="12dp"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:hint="Limit of Speed"
                    android:inputType="number|numberDecimal"
                    android:textColorHint="#000000"
                    app:layout_constraintBottom_toTopOf="@+id/button_cancel"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button_timepicker" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>


        ///////////////////////////    first /////////////


        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="#eef2f7"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="#eef2f7"
                android:orientation="vertical"
               >


                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:src="@drawable/shake"
                    android:layout_marginTop="5dp"/>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/shakedetect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textOff="OFF"
                    android:textOn="ON"
                    android:thumb="@drawable/thumb"
                    app:showText="true"
                    app:track="@drawable/track" />



                <TextView
                    android:id="@+id/alpha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="3dp"
                    android:gravity="center"
                    android:text="TextView" />

                <SeekBar
                    android:id="@+id/shakesense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_margin="3dp"
                    android:thumbTint="#1f2c47"
                   />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@color/colorPrimaryDark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:background="#eef2f7"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="70dp"
                    android:layout_height="76dp"
                    android:layout_gravity="center"
                    android:src="@drawable/lock"
                    android:layout_marginTop="5dp"/>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/Lockscreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textOff="OFF"
                    android:textOn="ON"
                    android:thumb="@drawable/thumb"
                    app:showText="true"
                    app:track="@drawable/track" />

                <TextView
                    android:id="@+id/beta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Lockscreen"
                    android:gravity="center"
                    android:text="TextView"
                    android:layout_margin="3dp"/>

                <SeekBar
                    android:id="@+id/lockangel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_margin="3dp"
                    android:thumbTint="#1f2c47"

                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</ScrollView>
</LinearLayout>